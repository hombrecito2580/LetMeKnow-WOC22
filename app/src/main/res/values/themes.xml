<resources>
    <!-- Base application theme. -->
    <style name="Theme.LetMeKnow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/action_bar</item>
<!--        <item name="android:windowLightStatusBar">true</item>-->
        <item name="android:windowContentTransitions">true</item>
        <item name="colorAccent">@color/text</item>
        <item name="android:navigationBarColor">@color/bgLight</item>
    </style>

    <style name="h1">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/roboto_extra_bold</item>
    </style>

    <style name="h2">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="h3">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="h4">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="h5">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="btnRegular">
        <item name="cornerRadius">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/btnRegular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="btnAlter">
        <item name="cornerRadius">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/btnAlter</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="btn_transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/primary</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="et">
        <item name="android:textColor">@color/text</item>
        <item name="hintTextColor">@color/textLight</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:background">@drawable/bg_et</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ProgressBarTheme">
        <item name="colorSecondary">@color/textApp</item>
    </style>
    
    <style name="bottom_sheet">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

</resources>